<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragmentTop">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewFrgmBttm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_message" />

        <Button
            android:id="@+id/buttonSendToFrgTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/app_send_message_frg_bttm" />

        <Button
            android:id="@+id/buttonSendToActv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_send_message_actv" />
    </LinearLayout>

</FrameLayout>
